<h2 class="has-text-centered is-size-3">Update <%= resource_name.to_s.humanize %></h2>
<br>

<div class="columns is-centered">
<div class="column is-half">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, class: "label"  %>
    <%= f.text_field :first_name, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :last_name, class: "label"  %>
    <%= f.text_field :last_name, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :user_name, class: "label"  %>
    <%= f.text_field :user_name, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :phone, class: "label"  %>
    <%= f.text_field :phone, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :email , class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "label"  %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label"  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "input"%>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "label"  %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password" , class: "input"%>
  </div>

  <div class="actions">
    <%= f.submit "Update" , class: "button is-primary"%>
  </div>
<% end %>
</div>
</div>
<br><br><br>