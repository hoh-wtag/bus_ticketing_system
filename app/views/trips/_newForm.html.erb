<%= form_with model: @trip do |form| %>
  <% if @trip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this Trip from being saved:</h2>
      <ul>
        <% @trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :ticket_price %><br>
    <%= form.number_field :ticket_price %>
  </div>
  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.label :time %><br>
    <%= form.time_field :time %>
  </div>
  <div>
    <%= form.label :bus %><br>
    <%= form.select :bus_id,Bus.all.map{|x| [x.code,x.id]} %>
  </div>
  <div>
    <%= form.label :route %><br>
    <%= form.select :route_id,Route.all.map{|x| [x.full_name,x.id]} %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
