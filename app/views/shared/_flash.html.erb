<% if flash[:success] %>
  <div class="card notification is-success">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="card notification is-info">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="card notification is-info">
    <%= flash[:notice] %>
  </div>
<% end %>
